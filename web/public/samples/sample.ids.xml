<?xml version="1.0" encoding="UTF-8"?>
<IDS>
  <Header>
    <Title>Sample IDS</Title>
    <Description>Simple example with a single property</Description>
    <Author>bSTr</Author>
    <Version>0.1.0</Version>
  </Header>
  <Specification>
    <RequirementGroup>
      <Title>Walls must have FireRating</Title>
      <Description>Require FireRating property</Description>
      <Applicability>
        <IfcClass>IfcWall</IfcClass>
      </Applicability>
      <Properties>
        <Property>
          <Name>FireRating</Name>
          <Datatype>IfcLabel</Datatype>
          <Operator>present</Operator>
        </Property>
      </Properties>
    </RequirementGroup>
  </Specification>
</IDS>

